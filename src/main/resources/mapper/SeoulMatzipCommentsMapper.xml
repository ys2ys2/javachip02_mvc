<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.human.web.mapper.SeoulMatzipCommentsMapper">


    <!-- 댓글 추가 -->
    <insert id="insertComment" parameterType="SeoulMatzipCommentsVO">
        INSERT INTO t_SeoulMatzip_comments 
        	(t_smc_content, t_smc_author_id, t_sm_idx)
        	VALUES 
        	(#{t_smc_content}, #{t_smc_author_id}, #{t_sm_idx})
    </insert>

    <!-- 모든 댓글 가져오기 -->
    <select id="getAllComments" resultType="SeoulMatzipCommentsVO">
       SELECT *
        	FROM t_SeoulMatzip_comments
        	ORDER BY t_smc_author_id DESC
       
    </select>


